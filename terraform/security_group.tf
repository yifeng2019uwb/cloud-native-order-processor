# Update RDS security groups to allow Lambda access
resource "aws_security_group_rule" "rds_order_lambda_access" {
  type                     = "ingress"
  from_port                = 5432
  to_port                  = 5432
  protocol                 = "tcp"
  source_security_group_id = aws_security_group.lambda.id
  security_group_id        = aws_security_group.rds_order.id
}


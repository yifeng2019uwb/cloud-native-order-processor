# File: config/environments/.env.local.example
# Template for local development environment
# Copy this file to .env.local and customize for your local setup

# Local Development Overrides
ENVIRONMENT=local
ENVIRONMENT_SUFFIX=local

# AWS Configuration (will use your local AWS profile)
# AWS_PROFILE=default  # Uncomment and set if using specific profile
# AWS_REGION=us-west-2  # Uncomment to override default region

# Local Testing Settings
TEST_VERBOSE=true
TEST_PARALLEL=false
INFRA_TEST_CLEANUP=false  # Keep resources for debugging
INFRA_TEST_SKIP_SLOW=true  # Skip slow tests for faster development

# Local Development Flags
DEBUG_MODE=true
DRY_RUN=false
SKIP_PREREQUISITES_CHECK=false

# Docker Configuration for Local Development
DOCKER_BUILD_CACHE=true
DOCKER_PUSH_TO_REGISTRY=false  # Don't push from local development

# Local Database Settings (if running locally)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=orderprocessor_local

# Local Service Configuration
# API_PORT=8000
# HEALTH_CHECK_ENABLED=true

# Terraform Local Settings
TERRAFORM_AUTO_APPROVE=false  # Require manual approval locally
TERRAFORM_DESTROY_AUTO_APPROVE=false

# Local Reporting
GENERATE_HTML_REPORTS=true
OPEN_REPORTS_IN_BROWSER=true
SAVE_REPORTS_TO_S3=false  # Don't upload reports from local development

# Local Development Utilities
ENABLE_SHELL_COMPLETION=true
SHOW_PROGRESS_BARS=true
COLOR_OUTPUT=true

# Override any other settings for local development
# Example:
# LOG_LEVEL=DEBUG
# TEST_TIMEOUT=300
